<%- include('partials/header.ejs') -%>

<main id="main">
  <div class="breadcrumbs" data-aos="fade-in">
    <div class="container">
      <h2>About Us</h2>
      <p> </p>
    </div>
  </div>
  <section id="about" class="about">
    <div class="container" data-aos="fade-up">
      <div class="row">
        <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-left" data-aos-delay="100">
          <img src="assets/img/about.jpg" class="img-fluid" alt="">
        </div>
        <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content">
          <h3>Skillupstand - Break your limits and enhance your skills with skillupstand.</h3>
          <p class="font-italic">
            We are a community for all the passionate people who want to improve their skill,
            where you can showcase your creativity and learn with your peers.
          </p>
        </div>
      </div>
    </div>
  </section>
  <section id="counts" class="counts section-bg">
    <div class="container">
      <div class="row counters">
        <div class="col-lg-3 col-6 text-center">
          <span data-toggle="counter-up"><%= counts.students %></span>
          <p>Students</p>
        </div>
        <div class="col-lg-3 col-6 text-center">
          <span data-toggle="counter-up"><%= counts.workshops %></span>
          <p>Workshops </p>
        </div>
        <div class="col-lg-3 col-6 text-center">
          <span data-toggle="counter-up"><%= counts.events %></span>
          <p>Events</p>
        </div>
        <div class="col-lg-3 col-6 text-center">
          <span data-toggle="counter-up"><%= counts.mentors %></span>
          <p>Mentors</p>
        </div>
      </div>
    </div>
  </section>
  <section id="trainers" class="trainers">
    <div class="container" data-aos="fade-up">
      <div class="section-title">
        <h2>Team</h2>
        <p>Our Team</p>
      </div>
      <% for(var i = 0, k = 0; i < members.length/3 && k < members.length; i++) { %>
      <div class="row" data-aos="zoom-in" data-aos-delay="100">
        <% for(var j = 0; j < 3 && k < members.length; j++, k++) { %>
        <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
          <div class="member">
            <!-- <img src="<%= members[k].image %>" class="img-fluid" alt="<%= members[k].name %>"> -->
            <div class="member-content">
              <h4 class="pt-4"><%= members[k].name %></h4>
              <span><%= members[k].designation %></span>
              <p><%= members[k].description %></p>
              <div class="social">
                <a href="<%= members[k].social.twitter %>"><i class="icofont-twitter"></i></a>
                <a href="<%= members[k].social.facebook %>"><i class="icofont-facebook"></i></a>
                <a href="<%= members[k].social.instagram %>"><i class="icofont-instagram"></i></a>
                <a href="<%= members[k].social.linkein %>"><i class="icofont-linkedin"></i></a>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <% } %>
    </div>
  </section>
</main>

<%- include('partials/footer.ejs') -%>